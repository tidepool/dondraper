!!! 5
block vars
  - var bodyclass = null;
html(lang='en')

  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      meta(name='keywords', content='personality,mindfulness,quantified self,psychology')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Karla:400,700')
      link(rel='stylesheet', href='/@@buildDir/all-min.css')

  body(class=bodyclass)

    include header

    div.content
      block content
        p Default content block contents.

    block footer
      include footer

