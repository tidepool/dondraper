html
  head
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/showdown/0.3.1/showdown.min.js')
    style
      html {
      background: no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      }
      body {
      color: black;
      font-family:'Karla', sans-serif;
      text-align: center;
      margin: 0px;
      }
      .logo_container {
      height: 100px;
      background-color: white;
      }
      .logo {
      position: absolute;
      top: 10px;
      left: 10px;
      }
      #badge {
      padding-top: 74px;
      padding-bottom: 20px;
      }
      #title {
      color: white;
      font-weight: bold;
      font-size: 50px;
      text-transform: uppercase;
      padding-top: 125px;
      }
      #description {
      color: #565656;
      font-size: 25px;
      margin-left: 25%;
      max-width: 50%;
      }
      #bullets {
      color: #565656;
      text-align: left;
      font-weight: bold;
      font-size: 18px;
      margin-left: 33%;
      max-width: 33%;
      }
      .line {
      padding: 10px;
      padding-bottom: 20px;
      text-align: left;
      margin-left: 33%;
      max-width: 33%;
      }
      .line img {
      width: 100%;
      height: 2px;
      }
      .download {
      font-size: 20px;
      color: #565656;
      text-align: center;
      padding-bottom: 10px;
      margin-left: 42%;
      max-width: 16%;
      }
      ul {
      list-style-image: url('images/check.png');
      }
      li {
      vertical-align:top;
      }
    link(href='http://fonts.googleapis.com/css?family=Karla:400,700,400italic,700italic', rel='stylesheet', type='text/css')
  body
    .container
      .logo_container
        .logo
          a(href='http://tidepool.co')
            img(src='@@buildDir/images/logo.png')
        #badge
      #title
      #description
      #bullets
        ul
      .line
        img(src='@@buildDir/images/line.jpg')
      .download Download the app and find out your personality!
      .download_button
        a(href='https://itunes.apple.com/us/app/tidepool/id691052387')
          img(src='@@buildDir/images/btn_downloadappstore.png', target='blank')
    script
      var options = decodeURIComponent(window.location.search.slice(1))
      .split('&')
      .reduce(function _reduce (/*Object*/ a, /*String*/ b) {
      b = b.split('=');
      a[b[0]] = b[1];
      return a;
      }, {});
      var url = 'https://tide-dev.herokuapp.com/api/v1/personality/' + options.type
      var converter = new Showdown.converter();
      var ajaxCall = $.get(url, function(data) {
      personality = data.data;
      imageUrl = '@@buildDir/images/results/' + options.type + '.jpg'
      badgeUrl = '@@buildDir/images/badges/' + options.type + '.png'
      $('html').css('background-image', 'url(' + imageUrl + ')');
      $('#badge').html('<img src=' + badgeUrl +' height="150px" width="125px">')
      $('#title').html(personality.name);
      $('#description').html(converter.makeHtml(personality.one_liner));
      for (var i=0; i<personality.bullet_description.length; i++) {
      $('#bullets ul').append('<li>' + converter.makeHtml(personality.bullet_description[i]) + '</li>');
      }
      })
